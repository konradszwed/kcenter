{% extends('base.html.twig') %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
<style>
</style>

    <div>List of stuff:</div>
    <a class="btn btn-primary" role="button" href="{{ path('post.create')}}">Create</a>
<table class="table">
    <thead>
    <tr>
        <th scope="col">id</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
    </tr>
    </thead>
    <tbody>
    {%  for post in posts %}
    <tr>
            <th scope="row">{{ post.id }}</th>
            <td><a href="{{ path('post.show',{id: post.id}) }}">{{post.title}}</a></td>
            <td>{{post.description}}</td>
            <td>
                <a class=text-danger href="{{ path('post.delete',{id : post.id}) }}">Delete</a>
            </td>
    </tr>
    {%  endfor %}
    </tbody>
</table>
{% endblock %}
